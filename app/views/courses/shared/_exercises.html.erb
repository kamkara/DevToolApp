<% if @course.exercises.empty? %>
    <div class="">Not Yet Exercise, Add your first Exercise  <%= link_to 'Add Exo', new_course_exercise_path(@course) , class:"ml-4 bg-blue-500 rounded-full px-2 " %> </div>
<% else %>
<% @course.exercises.each do |exercise| %>
    <div class="my-2">
        <div class=" border m-2 p-2 font-bold text-xl"><%= exercise.title %></div>
    </div>

<% end %>

<% end %>